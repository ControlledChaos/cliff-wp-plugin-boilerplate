{
	"name": "cliff-wp-plugin-boilerplate",
	"version": "1.0.0",
	"description": "Here is a short description of the plugin.",
	"scripts": {
		"dev": "run-s cleanup start",
		"cleanup": "rm -rf .cache dist",
		"start": "parcel ./_parcel/admin.js ./_parcel/frontend.js",
		"build": "run-s cleanup build-min build-unmin",
		"build-min": "parcel build ./_parcel/admin.js ./_parcel/frontend.js --out-dir dist/min --public-url ./",
		"build-unmin": "parcel build ./_parcel/admin.js ./_parcel/frontend.js --no-minify --public-url ./"
	},
	"keywords": [
		"wordpress",
		"boilerplate"
	],
	"license": "GPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "git+https://git@github.com/cliffordp/cliff-wp-plugin-boilerplate.git"
	},
	"bugs": {
		"url": "https://github.com/cliffordp/cliff-wp-plugin-boilerplate/issues"
	},
	"homepage": "https://github.com/cliffordp/cliff-wp-plugin-boilerplate#readme",
	"author": {
		"name": "Clifford Paulick",
		"url": "https://tourkick.com/"
	},
	"postcss": {
		"modules": true,
		"plugins": {
			"autoprefixer": {
				"grid": true
			},
			"postcss-preset-env": true,
			"postcss-combine-media-query": true,
			"postcss-combine-duplicated-selectors": true
		}
	},
	"browserslist": [
		"defaults"
	],
	"dependencies": {
		"postcss-modules": "^1.5.0"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5",
		"parcel-bundler": "^1.12.4",
		"postcss-combine-duplicated-selectors": "^8.1.0",
		"postcss-combine-media-query": "^1.0.0",
		"postcss-preset-env": "^6.7.0"
	}
}
